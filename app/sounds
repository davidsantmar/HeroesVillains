
import { Audio } from 'expo-audio';

useEffect(() => {
      return avengers
        ? () => {
            console.log('Liberando avengers');
            avengers.unloadAsync();
          }
        : undefined;
    }, [avengers]);
  useEffect(() => {
    return lose
      ? () => {
          console.log('Liberando lose');
          lose.unloadAsync();
        }
      : undefined;
  }, [lose]);
  useEffect(() => {
    return youWin
      ? () => {
          console.log('Liberando youWin');
          youWin.unloadAsync();
        }
      : undefined;
  }, [youWin]);
  useEffect(() => {
    return youLose
      ? () => {
          console.log('Liberando youLose');
          youLose.unloadAsync();
        }
      : undefined;
  }, [youLose]);
  useEffect(() => {
    return draw
      ? () => {
          console.log('Liberando draw');
          draw.unloadAsync();
        }
      : undefined;
  }, [draw]);
  async function playAvengers() {
    console.log('Cargando avengers');
    const { avengersSound } = await Audio.Sound.createAsync(
      require('../assets/sounds/avengers.mp3')
    );
    setAvengers(avengersSound);
    console.log('Reproduciendo avengers');
    await avengers.playAsync();
  }
 async function playLose() {
    console.log('Cargando lose');
    const { loseSound } = await Audio.Sound.createAsync(
      require('../assets/sounds/lose.mp3')
    );
    setLose(loseSound);
    console.log('Reproduciendo lose');
    await lose.playAsync();
  }
  async function playYouWin() {
    console.log('Cargando youWin');
    const { youWinSound } = await Audio.Sound.createAsync(
      require('../assets/sounds/you-win.mp3')
    );
    setYouWin(youWinSound);
    console.log('Reproduciendo youWin');
    await youWin.playAsync();
  }
  async function playYouLose() {
    console.log('Cargando youLose');
    const { youLoseSound } = await Audio.Sound.createAsync(
      require('../assets/sounds/you-lose.mp3')
    );
    setYouLose(youLoseSound);
    console.log('Reproduciendo youLose');
    await youLose.playAsync();
  }
  async function playDraw() {
    console.log('Cargando Draw');
    const { drawSound } = await Audio.Sound.createAsync(
      require('../assets/sounds/draw.mp3')
    );
    setDraw(drawSound);
    console.log('Reproduciendo draw');
    await draw.playAsync();
  }